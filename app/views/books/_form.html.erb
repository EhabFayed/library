
<% if @book.errors.any? %>
<ul>
    <%= @book.errors.full_messages.each do|msg|%>
    <li><%=  msg %></li>
    <% end %>
</ul>
<% end %>
<%= form_for @book do |f| %>
    <p>
        <%= f.label :book %><br/>
        <%= f.text_field :book %>
    </p>
    <p>
    <%= f.label :author %><br/>
    <%= f.text_field :author %>
    </p>
    <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
    </p>
    <p>
     <%= f.submit %>
     </p>
     <% end %>
     <%= link_to "all books we have", books_path%>
