<h2 align ="center">Book: <%= @book.book%></h2>
<h4 class = "center"><strong>author:<%= @book.author%></strong></h4>

<div class="well col-xs-8 col-xs-offset-2">
<ul class='listing'>
<div class='row center'>
    <div class='col-md-4 col-md-offset-4'>
        <li>this book added by :</li>
        <li><%= link_to gravatar_for(@book.user),user_path(@book.user)%></li>
        <li class= 'book-book'>
        <%= link_to @book.user.username, user_path(@book.user)%>
        </li>
        <li><small><%= pluralize(@book.user.books.count,"book") if @book.user.books %></small></li>
    </div>
</div>
</ul>
    <h4 class = "center description"><strong>description:</strong></h4>
    <hr>
     <%= simple_format(@book.description)%>
    <div class ="book-actions">
      <%= link_to"edit this book data", edit_book_path(@book), class: "btn btn-xs btn-primary"%>
      <%= link_to"delete this book data", book_path(@book),method: :delete, data: {confirm:"are u sure u wont delete this book"}, class: "btn btn-xs btn-danger"%>
      <%= link_to"view all books ",books_path, class: "btn btn-xs btn-success"%>
     
    </div>
</div