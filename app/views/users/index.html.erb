<h1 align="center">all our users </h1>
<div align='center'>
    <%= will_paginate %>
    <% @users.each do |user|  %>
        <ul class='listing'>
            <div class='row'>
                <div class='well col-md-4 col-md-offset-4'>
                    <li><%= link_to gravatar_for(user),user_path(user)%></li>
                    <li class= 'book-book'>
                    <%= link_to user.username, user_path(user)%>
                    </li>
                    <li><small><%= pluralize(user.books.count,"book") if user.books %></small></li>
                    <% if logged_in? and current_user.admin?%>
                        <li><%=link_to "delete this user", user_path(user) , method: :delete,
                        data: {confirm:"are u sure u delete this user and all his books"} %></li>
                    <%end%>
                </div>
            </div>
        </ul>
    <% end%>
   <%=will_paginate%>
</div>